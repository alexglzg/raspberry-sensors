<launch>

    <node pkg="sensors" type="imu" name="imu" />

    <node pkg="rosserial_python" type="serial_node.py" name="serial_node" args = "/dev/ttyUSB1" />

    <node pkg="sensors" type="ardumotors.py" name="ardumotors" />

    <node pkg="sensors" type="cs_ch.py" name="cs_ch" />

    <node name="asmc_m" pkg="sensors" type="asmc_m" >
	<param name = "k_u" value = "0.1804" />
	<param name = "k_psi" value = "0.05" />
	<param name = "kmin_u" value = "0.39" />
	<param name = "kmin_psi" value = "0.01" />
	<param name = "k2_u" value = "0.01" />
	<param name = "k2_psi" value = "0.2" />
	<param name = "mu_u" value = "0.1" />
	<param name = "mu_psi" value = "0.03" />
	<param name = "lambda_u" value = "0.001" />
	<param name = "lambda_psi" value = "1" />
	<param name = "alpha" value = "0.33" />
	<param name = "L1" value = "0.15" />
    </node>

    <!--Launch rosbag to record topics -->
    <node type="record" pkg="rosbag" name="recorder" args="record -a -o /home/ubuntu/catkin_ws/src/sensors/bags/asmc/pftc_0,7_speed_ref_heading_2" />

</launch>
