<launch>

    <node pkg="sensors" type="imu" name="imu" />

    <node pkg="sensors" type="asmc" name="asmc" />

    <node pkg="sensors" type="ardumotors.py" name="ardumotors" />

    <node pkg="sensors" type="LOS2sh.py" name="LOS2sh" />

    <node pkg="rosserial_python" type="serial_node.py" name="serial_node" args = "/dev/ttyUSB1" />

    <!--Launch rosbag to record topics -->
    <node type="record" pkg="rosbag" name="recorder" args="record -a -o /home/ubuntu/catkin_ws/src/sensors/bags/asmc/LOS2" />

</launch>
